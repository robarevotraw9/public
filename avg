#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "请输入数组大小: ";
    cin >> n;

    int arr[n];
    double sum = 0;

    cout << "请输入数组元素: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
        sum += arr[i];
    }

    cout << "平均值: " << sum / n << endl;
    return 0;
}
